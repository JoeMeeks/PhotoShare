<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://www.w3.org/ns/widgets"
	xmlns:gap="http://phonegap.com/ns/1.0"
	id="com.tkj.photoshare"
	version="0.1.0">
	<name>Photo Share</name>
	<description>Share photos with family and friends</description>
	<author href="http://joemeeks.net" email="joemeeks@joemeeks.net">Joe Meeks</author>
    
  <icon src="img/icons/icon57.png" width="57" height="57"  gap:platform="ios" />
  <icon src="img/icons/icon72.png" width="72" height="72" gap:platform="ios" gap:role="default" />
  <icon src="img/icons/icon96.png" width="96" height="96" gap:platform="ios" />
  <icon src="img/icons/icon114.png" width="114" height="114" gap:platform="ios" />
  <icon src="img/icons/icon144.png" width="144" height="144" gap:platform="ios" />

  <icon src="img/icons/icon36.png" gap:platform="android" gap:density="ldpi" />
  <icon src="img/icons/icon48.png" gap:platform="android" gap:density="mdpi" />
  <icon src="img/icons/icon72.png" gap:platform="android" gap:density="hdpi" />
  <icon src="img/icons/icon96.png" gap:platform="android" gap:density="xhdpi" />

  <gap:splash src="img/screens/iphone.png" width="320" height="480" />
  <gap:splash src="img/screens/iphone-retina.png" width="640" height="960" />
  <gap:splash src="img/screens/iphone5.png" width="640" height="1136" />
  <gap:splash src="img/screens/ipad-landscape.png" width="1024" height="768" />
  <gap:splash src="img/screens/ipad-portrait.png" width="768" height="1004" />
  <gap:splash src="img/screens/ipad-retina-landscape.png" width="2048" height="1496" />
  <gap:splash src="img/screens/ipad-retina-portrait.png" width="1536" height="2008" />

  <gap:splash src="img/screens/ldpi.png" gap:platform="android" gap:density="ldpi" />
  <gap:splash src="img/screens/mdpi.png" gap:platform="android" gap:density="mdpi" />
  <gap:splash src="img/screens/hdpi.png" gap:platform="android" gap:density="hdpi" />
  <gap:splash src="img/screens/xhdpi.png" gap:platform="android" gap:density="xhdpi" />
  
  <feature name="http://api.phonegap.com/1.0/camera" />
  <feature name="http://api.phonegap.com/1.0/device" />
  <feature name="http://api.phonegap.com/1.0/file" />
  <feature name="http://api.phonegap.com/1.0/media" />

  <preference name="phonegap-version" value="2.3.0" />
  <preference name="orientation" value="default" />
  <preference name="target-device" value="universal" />
  <preference name="fullscreen" value="false" />
  <preference name="webviewbounce" value="false" />
  <preference name="prerendered-icon" value="false" />
  <preference name="detect-data-types" value="true" />
  <preference name="exit-on-suspend" value="true" />
  <preference name="show-splash-screen-spinner" value="false" />
  <preference name="stay-in-webview" value="false" />
  
  <access origin="*" />
</widget>